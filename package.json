{
  "name": "rps",
  "title": "Rock Paper Scissors",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "build": "npm run build:clean && cross-env RPS_WEBPACK_MODE=production npm run build:all",
    "build:all": "concurrently \"npm run build:server\" \"npm run build:website\"",
    "build:clean": "rimraf dist public",
    "build:precompiled": "./scripts/precompiled.sh",
    "build:server": "tsc -p src/server/tsconfig.json",
    "build:server:watch": "onchange -d 500 -k \"src/server/**/*.ts\" -- npm run build:server",
    "build:website": "webpack",
    "build:website:watch": "webpack -w",
    "dev": "npm run dev:build && npm run dev:watch",
    "dev:build": "npm run build:all",
    "dev:watch": "concurrently \"npm run build:server:watch\" \"npm run build:website:watch\" \"npm run start:watch\"",
    "doctoc": "doctoc --github --notitle README.md",
    "migrate": "npm run migrate:latest",
    "migrate:latest": "knex --knexfile ./dist/server/knexfile.js migrate:latest",
    "migrate:make": "cd src/server && knex migrate:make --knexfile knexfile.ts -x ts",
    "migrate:rollback": "knex --knexfile ./dist/server/knexfile.js migrate:rollback",
    "start": "node ./bin/www",
    "start:watch": "cross-env DEBUG=rps:* nodemon"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "debug": "^4.3.1",
    "express": "~4.17.1",
    "fp-ts": "^2.9.1",
    "io-ts": "^2.2.13",
    "knex": "^0.21.12",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-listen": "^1.6.1",
    "stylus": "~0.54.8",
    "uuid": "^8.3.2",
    "ws": "^7.4.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@popperjs/core": "^2.5.4",
    "@tsconfig/svelte": "^1.0.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/html-webpack-plugin": "^3.2.4",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.11",
    "@types/terser-webpack-plugin": "^5.0.2",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.25",
    "@types/ws": "^7.4.0",
    "bootstrap": "^5.0.0-beta1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "doctoc": "^2.0.0",
    "dotenv": "^8.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0-alpha.15",
    "nodemon": "^2.0.6",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "stylus-loader": "^4.3.1",
    "svelte": "^3.31.0",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.6.1",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "engines": {
    "node": ">= 14.0.0"
  }
}
